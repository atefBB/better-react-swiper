{
  "name": "better-react-swiper",
  "version": "0.4.0-beta.2",
  "description": "Lightweight and simple React swiper component",
  "repository": {
    "type": "git",
    "url": "https://github.com/veksen/better-react-swiper.git"
  },
  "author": {
    "name": "Jean-Philippe Sirois",
    "email": "jp@veksen.net"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "umd:main": "dist/better-react-swiper.umd.production.js",
  "module": "dist/better-react-swiper.es.production.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsdx build",
    "start": "tsdx watch",
    "test": "tsdx test --passWithNoTests",
    "test:check-coverage": "yarn test --coverage && codecov",
    "preversion": "yarn build --production",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "react-resize-detector": "^4.2.1",
    "react-swipeable": "^5.5.1",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-resize-detector": "^4.2.0",
    "@types/react-swipeable": "^5.2.0",
    "@types/styled-components": "^5.0.1",
    "husky": "^4.2.3",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-testing-library": "^8.0.1",
    "tsdx": "^0.12.3",
    "tslib": "^1.11.1",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  }
}
